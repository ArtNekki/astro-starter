---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <base href="/" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <!--<link rel="icon" type="image/x-icon" href="/favicon.ico" />-->

    <!-- Basic meta tags -->
    <meta name="description" content="Описание вашего Astro приложения" />
    <meta name="keywords" content="astro, web application, ключевые слова" />
    <meta name="author" content="Ваше имя или название компании" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph tags -->
    <meta property="og:title" content="Название вашего приложения" />
    <meta property="og:description" content="Краткое описание вашего приложения" />
    <!--  <meta property="og:image" content="URL к изображению для превью">-->
    <meta property="og:url" content="URL вашего сайта" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Название вашего приложения" />
    <meta name="twitter:description" content="Краткое описание вашего приложения" />
    <!--  <meta name="twitter:image" content="URL к изображению для превью">-->

    <!-- For Internet Explorer -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- For mobile devices -->
    <meta name="theme-color" content="#ваш_цвет" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

